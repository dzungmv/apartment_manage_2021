<div class="post">
    <div class="post-header">
        <div class="avatar-sm">
            <img src={{ this.userAvatar }} alt="Khoa Công Nghệ Thông Tin DH TDT">
        </div>
        <div class="post-header-infor">
            <a href="#" class="post-header-name">
                {{ this.username }}
            </a>
            <div class="post-header-time">
                {{ this.date}}
            </div>
        </div>
        <div class="post-header-operation">
            <ion-icon name="ellipsis-vertical-outline"></ion-icon>
            <ul class="list-operation">
                <li> Delete </li>
            </ul>
        </div>
    </div>
    <div class="post-content">
        <div class="post-text">
            {{ this.content}}
        </div>
        {{#if this.imagePath}}
        <div class="post-img">
            <img src={{ this.imagePath }} alt="">
        </div>
        {{/if}}
        {{#if this.urlYoutube}}
        <div class="post-video">
            <iframe width="560" height="315" src={{this.urlYoutube}} title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        </div>
        {{/if}}
    </div>
    <div class="post-interact">
        <div class="comment-count">
            <ion-icon name="chatbox-ellipses-outline"></ion-icon>
            <span>12 comments</span>
        </div>
        <form action= "/API/comment/619c95e7270faac3b26cc18f/create" method="post">
            <div class="add-comment">
                <input type="text" placeholder="Add a comment..." name="content">
                <button>
                    <ion-icon name="paper-plane"></ion-icon>
                </button>
            </div>
        </form>
    </div>
    <ul class="post-comment">
        {{#each this.comments}}
        {{> post/comment}}
        {{/each}}
    </ul>
    <div class="seemore">
        Seemore comments...
    </div>
</div>