    {{> header/user}}
    {{> modals/updateInfor}}
    <div id="profile-page"></div>
<div class="wrapper">
    <div class="profile">
        <div class="profile-header">
            <div class="avatar-lg">
                <img src="{{account.avatar}}" alt="">
            </div>
            <div class="profile-data">
                <h1 class="profile-data-name">
                    {{account.name}}
                </h1>
                <a href="mailto: {{account.email}}" class="profile-data-email">
                    Email: {{account.email}}
                </a>
                <label for="modal-update-infor" class="profile-data-edit btn-edit-profile">
                    Edit profile <ion-icon name="create"></ion-icon>
                </label>
            </div>
        </div>
        <div class="profile-timeline">
            {{> post/post}}
        </div>
    </div>
</div>
